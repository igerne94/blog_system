extends layout

block content
  h1=title
  ul.errors
    if errors
      each error, i in errors
        li.alert.alert-danger #{error.msg}
  form(method='post' action='/posts/add' enctype="multipart/form-data")
    .form-group
      label Title:
      input.form-control(name='title' type='text')
    .form-group
      label Category
      select.form-control(name='category')
        each category, i in categories
          option(value='#{category.title}') #{category.title}
    .form-group
      label Body
      textarea.form-control(name='body' id='body')
    .form-group
      label Main Image:
      input.form-control(name='filename' type='file')
    .form-group
      label Author:
      select.form-control(name='author')
        option(value='Hanna Khonskaya') Hanna Khonskaya
        option(value='Another Author') Another Author
        option(value='John Doe') John Doe
    input.btn.btn-default(name='submit' type='submit' value='Save')
    script(src='/ckeditor/ckeditor.js')
    //- script(src='/ckeditor5-build-decoupled-document/ckeditor.js')
    //- script(src="https://cdn.ckeditor.com/ckeditor5/35.4.0/classic/ckeditor.js"></script>
    script
      | CKEDITOR.replace('body');